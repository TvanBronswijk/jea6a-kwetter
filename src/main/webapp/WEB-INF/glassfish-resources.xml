<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Resource Definitions//EN"
        "http://glassfish.org/dtds/glassfish-resources_1_5.dtd">
<resources>
    <jdbc-connection-pool driver-classname="com.microsoft.sqlserver.jdbc.SQLServerDataSource" name="mssql"
                          res-type="java.sql.Driver">
        <property name="Password" value="${glassfish.password}"/>
        <property name="User" value="${glassfish.username}"/>
        <property name="DatabaseName" value="${glassfish.databasename}"/>
        <property name="Domain" value="${glassfish.domain}"/>
        <property name="ServerName" value="${glassfish.servername}"/>
        <property name="Port" value="${glassfish.port}"/>
    </jdbc-connection-pool>
    <jdbc-resource pool-name="mssql" jndi-name="jdbc/kwetter"/>
</resources>